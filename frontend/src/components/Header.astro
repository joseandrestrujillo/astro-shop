---
import LoginButton from "./LoginButton.astro";
---

<header class="header" id="header">
    <div class="header-container container" id="header-container">
        <h1 class="h1-title">Vanilla-Shop</h1>
        <LoginButton/>
    </div>
</header>

<style>
    .header {
        font-size: 1em;
        padding: .3rem 1rem;
    }

    .header-container {
        height: 5rem;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        font-size: 1em;
    }

    .h1-title {
        height: fit-content;
        font-size: 3em;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        color: #11575d;
    }
</style>