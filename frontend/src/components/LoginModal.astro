<dialog id="login-dialog" class="login-dialog">
    <form>
        <fieldset class="login-fieldset-fields">
            <legend>Login</legend>
            <label>
                <span>Username:</span>
                <input type="text" name="username" id="login-username-input">
            </label>
            <label>
                <span>Password:</span>
                <input type="password" name="password" id="login-password-input">
            </label>
        </fieldset>
        <fieldset class="login-fieldset-buttons">
            <button id="login-cancel-btn" value="cancel" formmethod="dialog">Cancel</button>
            <button id="login-confirm-btn" value="default">Confirm</button>
        </fieldset>
    </form>
</dialog>

<script>
    import { isLoginDialogOpen } from '../stores/isLoginDialogOpen';
    
    isLoginDialogOpen.subscribe(open => {
      if (open) {
        let loginDialog: HTMLDialogElement | null= document.querySelector('#login-dialog')
        loginDialog && loginDialog.showModal()
      }
    })

    let loginCancelButton: HTMLButtonElement | null = document.querySelector("#login-cancel-btn")
    loginCancelButton && loginCancelButton.addEventListener("click", _ => {
        isLoginDialogOpen.set(false)
    })
</script>

<style>
    .login-dialog {
        margin: auto;
        border: none;
    }

    .login-dialog form{
        display: flex;
        flex-direction: column;
        justify-content: space-around;
    }

    .login-fieldset-fields,
    .login-fieldset-buttons {
        border: none;
    }

    .login-fieldset-fields {
        position: relative;
        padding-top: 3rem;
        font-size: 1em;
    }

    .login-fieldset-buttons {
        display: flex;
        justify-content: space-around;
        padding: .4rem;
        padding-bottom: .7rem;
    }
    .login-fieldset-fields legend {
        position: absolute;
        top: .8rem;
        left: calc(50% - 1.7rem);
        font-size: 1.5em;
        margin: 0;
    }

    .login-fieldset-fields label{
        display: flex;
        flex-direction: column;
        font-size: 1em;
    }


    .login-fieldset-buttons button{
        border: 0;
        border-radius: 1rem;
        padding: 0.5rem .7rem;
        background-color: #2c6166;
        color: #e7e5e5;
    }
</style>