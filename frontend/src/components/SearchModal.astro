<dialog id="search-dialog" class="search-dialog">
    <form>
        <fieldset class="search-fieldset-fields">
            <legend>What are you looking for?</legend>
            <input type="text" name="search" id="search-search-input">
        </fieldset>
        <fieldset class="search-fieldset-buttons">
            <button id="search-cancel-btn" value="cancel" formmethod="dialog">Cancel</button>
            <button id="search-confirm-btn" value="default">Confirm</button>
        </fieldset>
    </form>
</dialog>

<script>
    import { isSearchDialogOpen } from '../stores/isSearchDialogOpen';
    
    isSearchDialogOpen.subscribe(open => {
      if (open) {
        let searchDialog: HTMLDialogElement | null= document.querySelector('#search-dialog')
        searchDialog && searchDialog.showModal()
      }
    })

    let searchCancelButton: HTMLButtonElement | null = document.querySelector("#search-cancel-btn")
    searchCancelButton && searchCancelButton.addEventListener("click", _ => {
        isSearchDialogOpen.set(false)
    })
</script>

<style>
    .search-dialog {
        margin: auto;
        border: none;
    }

    .search-dialog form{
        display: flex;
        flex-direction: column;
        justify-content: space-around;
    }

    .search-fieldset-fields,
    .search-fieldset-buttons {
        border: none;
    }

    .search-fieldset-fields {
        position: relative;
        padding-top: 3rem;
        font-size: 1em;
    }

    .search-fieldset-buttons {
        display: flex;
        justify-content: space-around;
        padding: .4rem;
        padding-bottom: .7rem;
    }
    .search-fieldset-fields legend {
        position: absolute;
        top: .8rem;
        left: calc(50% - 1.7rem);
        left: calc(50% - 8rem);
        font-size: 1.5em;
        margin: 0;
    }
    .search-fieldset-fields input {
        width: 20rem;
        border: 1px solid #909090;
        border-radius: 5rem;
        padding: .2rem 1rem;
    }

    .search-fieldset-buttons button{
        border: 0;
        border-radius: 1rem;
        padding: 0.5rem .7rem;
        background-color: #2c6166;
        color: #e7e5e5;
    }
</style>