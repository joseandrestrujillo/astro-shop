<button id="login-btn" class="login-btn">Log In</button>

<script is:inline>
	let loginBtn = document.querySelector('#login-btn')

	loginBtn.addEventListener('click', _ => {
		let loginDialog = document.querySelector('#login-dialog')
		loginDialog.showModal()
	})
</script>

<style>
	.login-btn {
		height: fit-content;
		font-size: 1em;
		border: 0;
		background-color: #2c6166;
		color: #e7e5e5;
		padding: .5rem 1rem;
		border-radius: 1rem;
		cursor: pointer;
	}
</style>