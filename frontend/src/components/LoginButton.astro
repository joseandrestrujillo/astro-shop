<button id="login-btn" class="login-btn">Log In</button>

<script>
	import { isLoginDialogOpen } from "../stores/isLoginDialogOpen";

	function openDialog() {
		isLoginDialogOpen.set(true);
	}

	let loginButton: HTMLButtonElement | null = document.querySelector("#login-btn")

	loginButton && loginButton.addEventListener('click', openDialog);
</script>

<style>
	.login-btn {
		height: fit-content;
		font-size: 1em;
		border: 0;
		background-color: #2c6166;
		color: #e7e5e5;
		padding: .5rem 1rem;
		border-radius: 1rem;
		cursor: pointer;
	}
</style>